{
  "extends": "airbnb/base",
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "plugins": [
    "import"
  ],
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": false
    }
  },
  "overrides": [
    {
      "files": [
        "*.js"
      ],
      "rules": {
        "linebreak-style": "off",
        "no-plusplus": "off",
        "indent": [
          2, 4, {"SwitchCase": 1}
        ],
        "max-len": [
          "error", {
            "code": 120,
            "comments": 120
          }
        ],
        "no-param-reassign": [
          "error", {
            "props": false
          }
        ],
        "no-underscore-dangle": [
          "error", {
            "allow": [
              "_bar"
            ],
            "allowAfterThis": true,
            "enforceInMethodNames": false
          }
        ]
      }
    }
  ]
}
